{
  "manifest_version": 2,

  "name": "Fb Liberator",
  "description": "Reclaim your facebook data!",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "OpenFace"
  },

  "permissions": [
    "tabs",
    "pageCapture"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["css/content.css"],
      "js": ["lib/jquery-1.10.2.js", "lib/bootstrap.min.js", "shared.js", "content.js"]
    }
  ],

  "web_accessible_resources": [
    "lib/jquery-1.10.2.js",
    "lib/jquery-1.10.2.min.map",
    "lib/FileSaver.js",
    "shared.js",
    "css/content.css",
    "css/bootstrap-theme.min.css",
    "css/bootstrap.min.css"
  ],

  "background": {
    "scripts": ["lib/FileSaver.js", "lib/require.js", "lib/require.async.js", "modules/mimelib/index.js", "shared.js", "background.js"]
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
